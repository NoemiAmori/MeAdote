@model Fale
@{
    ViewData["Title"] = "Cadastro do Fale Conosco";
}
<br>
<div class="titulo">
    <h4>Fale Conosco</h4>
</div>

<center>
    <img src="/imagens/somos.jpg" alt="caes e gatos">
</center>

<div id="frmFale" class="row justify-content-md-center">
    <form id="frmFale" method="POST" class="col-md-4">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" id="nome" class="form-control" required/>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email">E-mail:</label>
                <input asp-for="Email" id="email" class="form-control" required/>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Mensagem">Mensagem:</label>
                <textarea asp-for="Mensagem" id="mensagem" class="form-control" required></textarea>
            </div>
        </div>
        <center><button id="BtnSubmit" class="btn btn-primary">CADASTRAR</button></center>
    </form>
</div>