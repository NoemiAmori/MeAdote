<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Me Adote</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="/css/style.css" />
</head>

<body>
     <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar navbar-light border-bottom box-shadow mb-3" style="background-color: #e3f2fd;">
            <div class="container">
                <a class="nav-link text-primary" href="/Home/Index" id="Index">ME ADOTE</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="nav-link text-primary" href="/Home/Somos" id="Somos">QUEM SOMOS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="nav-link text-primary" href="/Home/Cuidados" id="Somos">CUIDADOS COM OS PETS</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-primary" href="/Adocao/Pets" id="menuAdocao">PETS PARA ADOÇÃO</a>
                             <div class="dropdown-menu" aria-labelledby="menuAdocao">
                                <a class="dropdown-item" href="/Adocao/Listagem">Listagem</a>
                                <a class="dropdown-item" href="/Adocao/Cadastro">Cadastro</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-primary dropdown-toggle" data-toggle="dropdown" href="#">FALE CONOSCO</a>
                            <div class="dropdown-menu" aria-labelledby="menuFale">
                                <a class="dropdown-item" href="/Fale/Listagem">Listagem</a>
                                <a class="dropdown-item" href="/Fale/Cadastro">Cadastro</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link text-primary dropdown-toggle" data-toggle="dropdown" href="#">SEJA VOLUNTARIO</a>
                            <div class="dropdown-menu" aria-labelledby="menuFale">
                                <a class="dropdown-item" href="/Voluntario/Listagem">Listagem</a>
                                <a class="dropdown-item" href="/Voluntario/Cadastro">Cadastro</a>
                            </div>
                        </li>                      
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Me Adote - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/script.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
