@model Adocao
@{
    ViewData["Title"] = "Cadastro de Adocao";
}
<br>
<div class="titulo">
    <h4>Adoção</h4>
</div>

<center>
    <img src="/imagens/somos.jpg" alt="caes e gatos">
</center>

<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" class="form-control" required/>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email">E-mail:</label>
                <input asp-for="Email" class="form-control" required/>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Telefone">Telefone:</label>
                <input asp-for="Telefone" class="form-control" required/>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="DataNascimento">Data de Nascimento:</label>
                <input type="date" asp-for="DataNascimento" class="form-control" required/>
            </div>
        </div>
        
        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Endereco">Endereço:</label>
                <input asp-for="Endereco" class="form-control" placeholder="Apto, casa, número" required/>
            </div>
        </div>
    
        <div class="form-row">
            <div class="form-group col-md-4">
                <label asp-for="Cidade">Cidade:</label>
                <input asp-for="Cidade" class="form-control" required/>
            </div>

            <div class="form-group col-md-4">
                <label asp-for="Estado">Estado:</label>
                <input asp-for="Estado" class="form-control" required/>
            </div>
        
            <div class="form-group col-md-4">
                <label asp-for="Cep">CEP:</label>
                <input asp-for="Cep" class="form-control" required/>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Animal">Animal:</label>
                <input asp-for="Animal" class="form-control" required/>
            </div>
        </div>
    
        <center><button type="submit" class="btn btn-primary">CADASTRAR</button></center>
    </form>
</div>