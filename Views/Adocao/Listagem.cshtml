@model List<Adocao>

@{
    ViewData["Title"] = "Listagem de Adoção";
}
<br>
<div class="titulo">
    <h4>Lista de Adoção</h4>
</div>

<center>
    <img src="/imagens/somos.jpg" alt="caes e gatos">
</center>

<div class="row">
    <div class="col-md-12">
    <form class="form-inline" method="POST">
        <div class="form-group mb-2">
            <select name="TipoFiltro" class="form-control">
                <option value="Nome">Nome</option>
                <option value="Animal">Animal</option>
            </select>
        </div>
        <div class="form-group mb-2 mx-sm-3">
            <input type="text" placeholder="Filtro" name="Filtro" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary mb-2">Pesquisar</button>
    </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        @if (Model.Count > 0)
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <td>Id</td>
                        <td>Nome</td>
                        <td>E-mail</td>
                        <td>Telefone</td>
                        <td>Data de Nascimento</td>
                        <td>Endereço</td>
                        <td>Cidade</td>
                        <td>Estado</td>
                        <td>CEP</td>
                        <td>Animal</td>
                        <td>Operações</td>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Adocao a in Model)
                    {
                    <tr>
                        <td>@a.Id</td>
                        <td>@a.Nome</td>
                        <td>@a.Email</td>
                        <td>@a.Telefone</td>
                        <td>@a.DataNascimento</td>
                        <td>@a.Endereco</td>
                        <td>@a.Cidade</td>
                        <td>@a.Estado</td>
                        <td>@a.Cep</td>
                        <td>@a.Animal</td>
                        <td><a class="font-weight-bold link-primary" href="/Adocao/Editar/@a.Id">Alterar</a> |
                            <a class="font-weight-bold link-primary" href="/Adocao/Remover/@a.Id">Remover</a></td>
                    </tr>
                    }
                </tbody>
            </table>
        }
        else
            {
                <p>Nenhum registro encontrado.</p>
            }
    </div>
</div>