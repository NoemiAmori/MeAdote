@model Voluntario
@{
    ViewData["Title"] = "Alteração do cadastro de Voluntários";
}
<br>
<div class="titulo">
    <h4>Seja Voluntário</h4>
</div>

<center>
    <img src="/imagens/somos.jpg" alt="caes e gatos">
</center>

<div class="row justify-content-md-center">
    <form method="POST" asp-action="Cadastro" class="col-md-4">
        <input type="hidden" asp-for="Id" />
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" class="form-control">
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email">E-mail:</label>
                <input asp-for="Email" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Telefone">Telefone:</label>
                <input asp-for="Telefone" class="form-control">
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DataNascimento">Data de Nascimento:</label>
                <input asp-for="DataNascimento" class="form-control">
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Sexo">Sexo:</label>
                <input asp-for="Sexo" type="radio" value="Feminino"> Feminino
                <input asp-for="Sexo" type="radio" value="Masculino"> Masculino
            </div>
        </div>

        <center><button type="submit" class="btn btn-primary">ALTERAR</button></center>
    </form>
</div>