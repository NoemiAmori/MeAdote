@model Voluntario
@{
    ViewData["Title"] = "Cadastro de Voluntários";
}
<br>
<div class="titulo">
    <h4>Seja Voluntário</h4>
</div>

<center>
    <img src="/imagens/somos.jpg" alt="caes e gatos">
</center>

<div id="frmVoluntario" class="row justify-content-md-center">
    <form method="POST" id="frmVoluntario" class="col-md-4">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Nome">Nome:</label>
                <input asp-for="Nome" id="nome" class="form-control" required/>
            </div>

            <div class="form-group col-md-6">
                <label asp-for="Email">E-mail:</label>
                <input asp-for="Email" id="email" class="form-control" required/>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Telefone">Telefone:</label>
                <input asp-for="Telefone" id="telefone" class="form-control" required/>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="DataNascimento">Data de Nascimento:</label>
                <input type="date" asp-for="DataNascimento" id="datanascimento" class="form-control" required/>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-12">
                <label asp-for="Sexo">Sexo:</label>
                <input asp-for="Sexo" type="radio" value="Feminino"> Feminino
                <input asp-for="Sexo" type="radio" value="Masculino"> Masculino
            </div>
        </div>

        <center><button id="BtnSubmit" class="btn btn-primary">CADASTRAR</button></center>
    </form>
</div>